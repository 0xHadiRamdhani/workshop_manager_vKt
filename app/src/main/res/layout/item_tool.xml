<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Tool Icon -->
        <ImageView
            android:id="@+id/iv_tool_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="12dp"
            android:src="@android:drawable/ic_menu_manage"
            app:tint="?attr/colorPrimary" />

        <!-- Tool Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_tool_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Alat"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorPrimary" />

            <TextView
                android:id="@+id/tv_tool_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kode: ALT001"
                android:textSize="14sp"
                android:textColor="?android:attr/textColorSecondary"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/tv_tool_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kategori: Elektronik"
                android:textSize="14sp"
                android:textColor="?android:attr/textColorSecondary"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/tv_tool_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status: Tersedia"
                android:textSize="14sp"
                android:textColor="@android:color/holo_green_dark"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_edit"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                app:icon="@android:drawable/ic_menu_edit" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_delete"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hapus"
                app:icon="@android:drawable/ic_menu_delete" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>